.container {
  padding: 0;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  background: linear-gradient(180deg, #f3e5f5 0%, #f5f5f5 100%);
  position: relative;
}

.container::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 280rpx;
  background: linear-gradient(135deg, #9C27B0 0%, #7B1FA2 50%, #4A148C 100%);
  border-bottom-left-radius: 60rpx;
  border-bottom-right-radius: 60rpx;
  z-index: 0;
}

.header {
  position: relative;
  z-index: 1;
  padding: 80rpx 40rpx 40rpx;
  text-align: center;
}

.title {
  font-size: 44rpx;
  font-weight: 700;
  color: #fff;
  margin-bottom: 12rpx;
  letter-spacing: 2rpx;
  text-shadow: 0 4rpx 8rpx rgba(0,0,0,0.15);
}

.subtitle {
  font-size: 26rpx;
  color: rgba(255,255,255,0.9);
}

.stats-grid {
  position: relative;
  z-index: 1;
  display: flex;
  flex-wrap: wrap;
  padding: 0 20rpx;
  margin-bottom: 30rpx;
  gap: 16rpx;
}

.stat-card {
  flex: 1;
  min-width: calc(50% - 16rpx);
  background: linear-gradient(145deg, #ffffff, #fafafa);
  border-radius: 24rpx;
  padding: 32rpx 24rpx;
  text-align: center;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.06);
  transition: all 0.3s ease;
}

.stat-card:active {
  transform: translateY(-2rpx);
  box-shadow: 0 12rpx 40rpx rgba(0, 0, 0, 0.1);
}

.stat-icon {
  width: 80rpx;
  height: 80rpx;
  margin: 0 auto 20rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
}

.stat-icon.purple {
  background: linear-gradient(135deg, rgba(156, 39, 176, 0.15), rgba(156, 39, 176, 0.05));
}

.stat-icon.blue {
  background: linear-gradient(135deg, rgba(33, 150, 243, 0.15), rgba(33, 150, 243, 0.05));
}

.stat-icon.green {
  background: linear-gradient(135deg, rgba(76, 175, 80, 0.15), rgba(76, 175, 80, 0.05));
}

.stat-icon.orange {
  background: linear-gradient(135deg, rgba(255, 152, 0, 0.15), rgba(255, 152, 0, 0.05));
}

.stat-value {
  font-size: 48rpx;
  font-weight: 700;
  color: #333;
  margin-bottom: 8rpx;
  letter-spacing: 1rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #757575;
  font-weight: 400;
}

.chart-section {
  position: relative;
  z-index: 1;
  margin: 0 20rpx 30rpx;
  background: linear-gradient(145deg, #ffffff, #fafafa);
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.06);
}

.chart-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 24rpx;
  display: flex;
  align-items: center;
}

.chart-title::before {
  content: '';
  width: 8rpx;
  height: 28rpx;
  background: linear-gradient(180deg, #9C27B0, #7B1FA2);
  border-radius: 4rpx;
  margin-right: 16rpx;
}

.chart-container {
  width: 100%;
  height: 400rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.chart-placeholder {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx;
}

.chart-placeholder-icon {
  font-size: 80rpx;
  color: #BDBDBD;
  margin-bottom: 20rpx;
}

.chart-placeholder-text {
  font-size: 26rpx;
  color: #BDBDBD;
}

.legend {
  display: flex;
  justify-content: center;
  gap: 40rpx;
  margin-top: 24rpx;
  padding-top: 24rpx;
  border-top: 1rpx solid rgba(0,0,0,0.04);
}

.legend-item {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.legend-dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
}

.legend-dot.purple {
  background: linear-gradient(135deg, #9C27B0, #7B1FA2);
}

.legend-dot.blue {
  background: linear-gradient(135deg, #2196F3, #1976D2);
}

.legend-text {
  font-size: 24rpx;
  color: #757575;
}

.progress-section {
  position: relative;
  z-index: 1;
  margin: 0 20rpx 30rpx;
  background: linear-gradient(145deg, #ffffff, #fafafa);
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.06);
}

.progress-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 24rpx;
  display: flex;
  align-items: center;
}

.progress-title::before {
  content: '';
  width: 8rpx;
  height: 28rpx;
  background: linear-gradient(180deg, #9C27B0, #7B1FA2);
  border-radius: 4rpx;
  margin-right: 16rpx;
}

.progress-item {
  margin-bottom: 28rpx;
}

.progress-item:last-child {
  margin-bottom: 0;
}

.progress-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.progress-label {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
}

.progress-value {
  font-size: 26rpx;
  color: #9C27B0;
  font-weight: 600;
}

.progress-bar {
  height: 16rpx;
  background: rgba(156, 39, 176, 0.1);
  border-radius: 8rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #9C27B0 0%, #7B1FA2 100%);
  border-radius: 8rpx;
  transition: width 0.5s ease;
}

.progress-fill.blue {
  background: linear-gradient(90deg, #2196F3 0%, #1976D2 100%);
}

.progress-fill.green {
  background: linear-gradient(90deg, #4CAF50 0%, #2E7D32 100%);
}

.progress-fill.orange {
  background: linear-gradient(90deg, #FF9800 0%, #F57C00 100%);
}
