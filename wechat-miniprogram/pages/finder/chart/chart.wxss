/* 物品陈列图表页面样式 */
.container {
  padding: 20rpx;
  min-height: 100vh;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
  text-align: center;
}

/* 统计卡片样式 */
.stats-container {
  display: flex;
  justify-content: space-around;
  margin-bottom: 40rpx;
}

.stat-card {
  background-color: white;
  border-radius: 12rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
  text-align: center;
  width: 180rpx;
}

.stat-number {
  font-size: 48rpx;
  font-weight: bold;
  color: #3cc51f;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
}

/* 图表区域样式 */
.chart-section {
  background-color: white;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
}

.chart-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.chart-container {
  height: 400rpx;
  width: 100%;
}

.chart {
  width: 100%;
  height: 100%;
}

/* 物品网格区域样式 */
.grid-section {
  background-color: white;
  border-radius: 12rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
}

.items-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
  margin-top: 20rpx;
}

.grid-item {
  position: relative;
  border-radius: 8rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.grid-image {
  width: 100%;
  height: 200rpx;
  object-fit: cover;
}

.grid-id {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: rgba(0, 0, 0, 0.6);
  color: white;
  font-size: 20rpx;
  padding: 8rpx;
  text-align: center;
}