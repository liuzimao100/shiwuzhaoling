<view class="container">
  <text class="title">物品陈列图表</text>
  
  <!-- 统计卡片 -->
  <view class="stats-container">
    <view class="stat-card">
      <text class="stat-number">{{totalItems}}</text>
      <text class="stat-label">总物品数</text>
    </view>
    <view class="stat-card">
      <text class="stat-number">{{todayItems}}</text>
      <text class="stat-label">今日新增</text>
    </view>
  </view>
  
  <!-- 时间分布图表 -->
  <view class="chart-section">
    <text class="chart-title">物品时间分布</text>
    <view class="chart-container">
      <canvas canvas-id="timeChart" class="chart"></canvas>
    </view>
  </view>
  
  <!-- 物品陈列网格 -->
  <view class="grid-section">
    <text class="chart-title">物品陈列</text>
    <view class="items-grid">
      <view class="grid-item" wx:for="{{items}}" wx:key="{{item.id}}">
        <image class="grid-image" src="{{item.imageUrl}}" mode="aspectFill"></image>
        <text class="grid-id">{{item.id}}</text>
      </view>
    </view>
  </view>
</view>