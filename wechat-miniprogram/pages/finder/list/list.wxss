.container {
  padding: 0;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  background: linear-gradient(180deg, #f5f5f5 0%, #fafafa 100%);
}

.header {
  background: linear-gradient(135deg, #2196F3 0%, #1976D2 50%, #0D47A1 100%);
  padding: 80rpx 40rpx 50rpx;
  text-align: center;
  border-bottom-left-radius: 40rpx;
  border-bottom-right-radius: 40rpx;
}

.title {
  font-size: 44rpx;
  font-weight: 700;
  color: #fff;
  margin-bottom: 12rpx;
  letter-spacing: 2rpx;
}

.subtitle {
  font-size: 26rpx;
  color: rgba(255,255,255,0.85);
}

.loading-container {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #e0e0e0;
  border-top-color: #2196F3;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}

.empty-container {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 40rpx;
}

.empty-icon-wrapper {
  width: 180rpx;
  height: 180rpx;
  background: linear-gradient(145deg, #e3f2fd, #bbdefb);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 40rpx;
  box-shadow: 0 16rpx 48rpx rgba(33, 150, 243, 0.2);
}

.empty-icon {
  font-size: 80rpx;
}

.empty-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 16rpx;
}

.empty-desc {
  font-size: 26rpx;
  color: #999;
  text-align: center;
  line-height: 1.6;
  margin-bottom: 50rpx;
}

.upload-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  background: linear-gradient(135deg, #2196F3 0%, #1976D2 100%);
  color: #fff;
  font-size: 30rpx;
  font-weight: 600;
  padding: 24rpx 60rpx;
  border-radius: 50rpx;
  box-shadow: 0 8rpx 24rpx rgba(33, 150, 243, 0.35);
  border: none;
}

.upload-btn:active {
  transform: scale(0.98);
  opacity: 0.9;
}

.btn-icon {
  font-size: 32rpx;
}

.btn-text {
  letter-spacing: 1rpx;
}

.list-container {
  flex: 1;
  padding: 24rpx;
  padding-bottom: 180rpx;
}

.items-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.item-card {
  background: #fff;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  transition: all 0.3s ease;
}

.item-card:active {
  transform: translateY(-4rpx);
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
}

.item-image-wrapper {
  width: 100%;
  height: 280rpx;
  background: #f5f5f5;
  overflow: hidden;
}

.item-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.item-info {
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.item-id {
  font-size: 26rpx;
  font-weight: 600;
  color: #333;
}

.item-time {
  font-size: 22rpx;
  color: #999;
}

.bottom-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  gap: 20rpx;
  padding: 24rpx 30rpx;
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
  background: #fff;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.06);
}

.action-btn {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  height: 88rpx;
  border-radius: 44rpx;
  font-size: 28rpx;
  font-weight: 600;
  border: none;
  transition: all 0.3s ease;
}

.action-btn.upload {
  background: linear-gradient(135deg, #2196F3 0%, #1976D2 100%);
  color: #fff;
  box-shadow: 0 6rpx 20rpx rgba(33, 150, 243, 0.3);
}

.action-btn.chart {
  background: linear-gradient(145deg, #ffffff, #f5f5f5);
  color: #333;
  border: 2rpx solid #e0e0e0;
}

.action-btn:active {
  transform: scale(0.98);
}

.action-icon {
  font-size: 30rpx;
}

.action-text {
  letter-spacing: 1rpx;
}
