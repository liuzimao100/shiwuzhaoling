<view class="container">
  <view class="header">
    <text class="title">发现的物品</text>
    <text class="subtitle">共 {{items.length}} 件物品等待认领</text>
  </view>
  
  <view class="loading-container" wx:if="{{loading}}">
    <view class="loading-spinner"></view>
    <text class="loading-text">加载中...</text>
  </view>
  
  <view class="empty-container" wx:elif="{{!loading && items.length === 0}}">
    <view class="empty-icon-wrapper">
      <text class="empty-icon">📦</text>
    </view>
    <text class="empty-title">暂无发现的物品</text>
    <text class="empty-desc">发现物品后，拍照上传到这里\n帮助失主找回丢失的物品</text>
    <button class="upload-btn" bindtap="gotoUpload">
      <text class="btn-icon">📷</text>
      <text class="btn-text">去上传</text>
    </button>
  </view>
  
  <view class="list-container" wx:else>
    <view class="items-grid">
      <view class="item-card" wx:for="{{items}}" wx:key="{{item.id}}">
        <view class="item-image-wrapper">
          <image class="item-image" src="{{item.imageUrl}}" mode="aspectFill"></image>
        </view>
        <view class="item-info">
          <text class="item-id">编号: {{item.id}}</text>
          <text class="item-time">{{item.createdAt}}</text>
        </view>
      </view>
    </view>
    
    <view class="bottom-actions">
      <button class="action-btn upload" bindtap="gotoUpload">
        <text class="action-icon">📷</text>
        <text class="action-text">上传物品</text>
      </button>
      <button class="action-btn chart" bindtap="gotoChart">
        <text class="action-icon">📊</text>
        <text class="action-text">查看统计</text>
      </button>
    </view>
  </view>
</view>
