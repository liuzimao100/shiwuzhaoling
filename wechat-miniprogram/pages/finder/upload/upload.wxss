.container {
  padding: 0;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  background: linear-gradient(180deg, #fff8e1 0%, #f5f5f5 100%);
  position: relative;
}

.container::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 280rpx;
  background: linear-gradient(135deg, #FF9800 0%, #F57C00 50%, #E65100 100%);
  border-bottom-left-radius: 60rpx;
  border-bottom-right-radius: 60rpx;
  z-index: 0;
}

.title {
  position: relative;
  z-index: 1;
  font-size: 44rpx;
  font-weight: 700;
  color: #fff;
  margin-bottom: 12rpx;
  text-align: center;
  padding-top: 80rpx;
  letter-spacing: 2rpx;
  text-shadow: 0 4rpx 8rpx rgba(0,0,0,0.15);
}

.subtitle {
  position: relative;
  z-index: 1;
  font-size: 26rpx;
  color: rgba(255,255,255,0.9);
  margin-bottom: 40rpx;
  text-align: center;
}

.camera-container {
  position: relative;
  z-index: 1;
  width: calc(100% - 40rpx);
  height: 520rpx;
  margin: 0 20rpx 40rpx;
  background-color: #1a1a1a;
  border-radius: 28rpx;
  overflow: hidden;
  box-shadow: 0 16rpx 48rpx rgba(0, 0, 0, 0.2);
}

.camera {
  width: 100%;
  height: 100%;
}

.capture-btn {
  position: absolute;
  bottom: 50rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 130rpx;
  height: 130rpx;
  border-radius: 50%;
  background: linear-gradient(145deg, rgba(255,255,255,0.4), rgba(255,255,255,0.2));
  display: flex;
  align-items: center;
  justify-content: center;
  border: 5rpx solid rgba(255,255,255,0.8);
  box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.3);
  transition: all 0.3s ease;
}

.capture-btn:active {
  transform: translateX(-50%) scale(0.95);
  background: linear-gradient(145deg, rgba(255,255,255,0.5), rgba(255,255,255,0.3));
}

.capture-icon {
  width: 65rpx;
  height: 65rpx;
}

.album-btn {
  position: absolute;
  bottom: 210rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 220rpx;
  height: 70rpx;
  background: linear-gradient(145deg, rgba(255,255,255,0.25), rgba(255,255,255,0.15));
  color: white;
  border-radius: 35rpx;
  font-size: 26rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 2rpx solid rgba(255,255,255,0.6);
  backdrop-filter: blur(10px);
  font-weight: 500;
}

.album-btn:active {
  background: linear-gradient(145deg, rgba(255,255,255,0.35), rgba(255,255,255,0.25));
}

.preview-container {
  position: relative;
  z-index: 1;
  width: calc(100% - 40rpx);
  height: 520rpx;
  margin: 0 20rpx 40rpx;
  background-color: #1a1a1a;
  border-radius: 28rpx;
  overflow: hidden;
  box-shadow: 0 16rpx 48rpx rgba(0, 0, 0, 0.2);
}

.preview-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.preview-buttons {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  justify-content: center;
  gap: 20rpx;
  padding: 40rpx 30rpx;
  background: linear-gradient(transparent, rgba(0, 0, 0, 0.85));
}

.result-container {
  position: relative;
  z-index: 1;
  margin: 0 20rpx 40rpx;
}

.result-card {
  background: linear-gradient(145deg, #ffffff, #fafafa);
  border-radius: 24rpx;
  padding: 50rpx;
  text-align: center;
  box-shadow: 0 12rpx 40rpx rgba(0, 0, 0, 0.1);
}

.result-icon {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 30rpx;
}

.result-icon.success {
  background: linear-gradient(135deg, #4CAF50 0%, #2E7D32 100%);
  border-radius: 50%;
  padding: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(76, 175, 80, 0.35);
}

.result-icon.error {
  background: linear-gradient(135deg, #EF5350 0%, #C62828 100%);
  border-radius: 50%;
  padding: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(239, 83, 80, 0.35);
}

.result-text {
  font-size: 36rpx;
  font-weight: 600;
  margin-bottom: 20rpx;
}

.result-text.success {
  color: #2E7D32;
}

.result-text.error {
  color: #C62828;
}

.result-desc {
  font-size: 26rpx;
  color: #757575;
  margin-bottom: 40rpx;
  line-height: 1.6;
}

.btn {
  min-width: 180rpx;
  height: 80rpx;
  font-size: 28rpx;
  font-weight: 600;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
  letter-spacing: 1rpx;
}

.btn-primary {
  background: linear-gradient(135deg, #4CAF50 0%, #2E7D32 100%);
  color: white;
  box-shadow: 0 6rpx 20rpx rgba(76, 175, 80, 0.3);
}

.btn-primary:active {
  transform: translateY(2rpx);
  box-shadow: 0 3rpx 10rpx rgba(76, 175, 80, 0.25);
}

.btn-secondary {
  background: linear-gradient(135deg, #FF9800 0%, #F57C00 100%);
  color: white;
  box-shadow: 0 6rpx 20rpx rgba(255, 152, 0, 0.3);
}

.btn-secondary:active {
  transform: translateY(2rpx);
  box-shadow: 0 3rpx 10rpx rgba(255, 152, 0, 0.25);
}
