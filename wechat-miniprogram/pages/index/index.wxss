/* 首页样式 */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 100vh;
  padding: 40rpx 20rpx;
}

.logo-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 80rpx;
}

.logo {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.app-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}

.app-desc {
  font-size: 28rpx;
  color: #666;
  text-align: center;
}

.btn-container {
  width: 100%;
  max-width: 500rpx;
  display: flex;
  flex-direction: column;
  gap: 30rpx;
  margin-bottom: 80rpx;
}

.btn {
  width: 100%;
  height: 100rpx;
  font-size: 32rpx;
  font-weight: bold;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.btn-primary {
  background-color: #3cc51f;
  color: white;
}

.btn-primary:active {
  background-color: #2b8a17;
  transform: scale(0.98);
}

.btn-secondary {
  background-color: #ff9500;
  color: white;
}

.btn-secondary:active {
  background-color: #cc7a00;
  transform: scale(0.98);
}

.feature-container {
  width: 100%;
  max-width: 500rpx;
  display: flex;
  justify-content: space-around;
  padding-top: 40rpx;
  border-top: 1rpx solid #e5e5e5;
}

.feature-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
}

.feature-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.feature-text {
  font-size: 24rpx;
  color: #666;
  text-align: center;
  max-width: 150rpx;
  line-height: 1.4;
}