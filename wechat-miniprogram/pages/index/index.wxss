.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #e8f5e9 0%, #f5f5f5 100%);
  position: relative;
  overflow: hidden;
}

.top-decoration {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 300rpx;
  background: linear-gradient(135deg, #4CAF50 0%, #2E7D32 50%, #1B5E20 100%);
  border-bottom-left-radius: 60rpx;
  border-bottom-right-radius: 60rpx;
  z-index: 1;
}

.top-decoration::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: radial-gradient(circle at 20% 80%, rgba(255,255,255,0.1) 0%, transparent 50%),
              radial-gradient(circle at 80% 20%, rgba(255,255,255,0.15) 0%, transparent 40%);
}

.bottom-decoration {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 120rpx;
  background: linear-gradient(135deg, #4CAF50, #2E7D32);
  border-top-left-radius: 60rpx;
  border-top-right-radius: 60rpx;
  z-index: 1;
  opacity: 0.15;
}

.content {
  position: relative;
  z-index: 2;
  padding: 80rpx 40rpx 40rpx;
  display: flex;
  flex-direction: column;
  gap: 50rpx;
}

.app-brand {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  gap: 16rpx;
  margin-top: 20rpx;
}

.brand-icon {
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
  background: linear-gradient(145deg, #ffffff, #f0f0f0);
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.15),
              0 8rpx 24rpx rgba(0, 0, 0, 0.1),
              inset 0 -4rpx 12rpx rgba(0, 0, 0, 0.05);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 24rpx;
  animation: float 4s ease-in-out infinite;
}

@keyframes float {
  0%, 100% { transform: translateY(0rpx); }
  50% { transform: translateY(-16rpx); }
}

.brand-emoji {
  font-size: 90rpx;
  filter: drop-shadow(0 4rpx 8rpx rgba(0,0,0,0.1));
}

.app-title {
  font-size: 56rpx;
  font-weight: 700;
  color: #1B5E20;
  margin-bottom: 12rpx;
  letter-spacing: 4rpx;
  text-shadow: 0 2rpx 4rpx rgba(0,0,0,0.1);
}

.app-slogan {
  font-size: 26rpx;
  color: #558B2F;
  max-width: 80%;
  line-height: 1.6;
  font-weight: 500;
}

.features-section {
  display: flex;
  flex-direction: column;
  gap: 28rpx;
}

.feature-card {
  display: flex;
  align-items: center;
  background: linear-gradient(145deg, #ffffff, #fafafa);
  border-radius: 28rpx;
  padding: 36rpx 32rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08),
              0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
}

.feature-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 10rpx;
  height: 100%;
  transition: all 0.4s ease;
}

.feature-card::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(90deg, transparent, rgba(255,255,255,0.4));
  opacity: 0;
  transition: opacity 0.4s ease;
}

.feature-card:active {
  transform: translateY(4rpx) scale(0.98);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.feature-card:active::after {
  opacity: 1;
}

.finder-card::before {
  background: linear-gradient(180deg, #66BB6A, #43A047);
}

.loser-card::before {
  background: linear-gradient(180deg, #FFA726, #FB8C00);
}

.card-icon {
  width: 100rpx;
  height: 100rpx;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 28rpx;
  position: relative;
  z-index: 1;
  transition: transform 0.3s ease;
}

.feature-card:active .card-icon {
  transform: scale(0.95);
}

.finder-card .card-icon {
  background: linear-gradient(145deg, rgba(102, 187, 106, 0.15), rgba(67, 160, 71, 0.1));
  box-shadow: 0 4rpx 16rpx rgba(76, 175, 80, 0.2);
}

.loser-card .card-icon {
  background: linear-gradient(145deg, rgba(255, 167, 38, 0.15), rgba(251, 140, 0, 0.1));
  box-shadow: 0 4rpx 16rpx rgba(255, 152, 0, 0.2);
}

.icon-emoji {
  font-size: 48rpx;
}

.card-content {
  flex: 1;
  position: relative;
  z-index: 1;
}

.card-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #2E7D32;
  margin-bottom: 10rpx;
  letter-spacing: 1rpx;
}

.loser-card .card-title {
  color: #E65100;
}

.card-desc {
  font-size: 24rpx;
  color: #757575;
  font-weight: 400;
}

.card-arrow {
  font-size: 48rpx;
  color: #BDBDBD;
  font-weight: 300;
  position: relative;
  z-index: 1;
  transition: transform 0.3s ease;
}

.feature-card:active .card-arrow {
  transform: translateX(8rpx);
}

@media (max-width: 375px) {
  .app-title {
    font-size: 46rpx;
  }
  
  .feature-card {
    padding: 28rpx 24rpx;
  }
  
  .card-icon {
    width: 80rpx;
    height: 80rpx;
  }
}
