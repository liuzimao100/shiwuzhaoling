.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background: linear-gradient(180deg, #f5f5f5 0%, #fafafa 100%);
}

.auth-container {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 0 50rpx;
  position: relative;
}

.auth-container::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 300rpx;
  background: linear-gradient(135deg, #4CAF50 0%, #2E7D32 50%, #1B5E20 100%);
  border-bottom-left-radius: 80rpx;
  border-bottom-right-radius: 80rpx;
}

.avatar-placeholder {
  position: relative;
  z-index: 1;
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #4CAF50 0%, #2E7D32 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 50rpx;
  box-shadow: 0 16rpx 48rpx rgba(76, 175, 80, 0.35);
}

.avatar-text {
  font-size: 56rpx;
  font-weight: 700;
  color: #fff;
}

.auth-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 16rpx;
}

.auth-subtitle {
  font-size: 26rpx;
  color: #757575;
  margin-bottom: 70rpx;
}

.auth-buttons {
  width: 100%;
  display: flex;
  flex-direction: column;
  gap: 28rpx;
}

.login-btn {
  width: 100%;
  height: 96rpx;
  font-size: 32rpx;
  font-weight: 600;
  color: #fff;
  background: linear-gradient(135deg, #4CAF50 0%, #2E7D32 100%);
  border-radius: 48rpx;
  line-height: 96rpx;
  box-shadow: 0 8rpx 24rpx rgba(76, 175, 80, 0.35);
  letter-spacing: 2rpx;
}

.login-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 12rpx rgba(76, 175, 80, 0.3);
}

.register-btn {
  width: 100%;
  height: 96rpx;
  font-size: 32rpx;
  font-weight: 600;
  color: #4CAF50;
  background: #fff;
  border: 3rpx solid #4CAF50;
  border-radius: 48rpx;
  line-height: 96rpx;
  box-shadow: 0 4rpx 16rpx rgba(76, 175, 80, 0.15);
  letter-spacing: 2rpx;
}

.register-btn:active {
  background: rgba(76, 175, 80, 0.05);
}

.user-container {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.user-header {
  background: linear-gradient(135deg, #4CAF50 0%, #2E7D32 50%, #1B5E20 100%);
  padding: 80rpx 40rpx 60rpx;
  display: flex;
  align-items: center;
  gap: 36rpx;
  position: relative;
  overflow: hidden;
}

.user-header::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: radial-gradient(circle at 10% 90%, rgba(255,255,255,0.1) 0%, transparent 40%),
              radial-gradient(circle at 90% 10%, rgba(255,255,255,0.15) 0%, transparent 35%);
}

.avatar {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  background-color: rgba(255, 255, 255, 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  overflow: hidden;
  border: 4rpx solid rgba(255,255,255,0.3);
  box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.15);
  z-index: 1;
}

.avatar-image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.avatar-edit-hint {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 40rpx;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
}

.edit-icon {
  font-size: 26rpx;
  color: #fff;
}

.username {
  font-size: 36rpx;
  font-weight: 600;
  color: #fff;
  margin-bottom: 10rpx;
  position: relative;
  z-index: 1;
  letter-spacing: 1rpx;
}

.phone {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.85);
  position: relative;
  z-index: 1;
}

.menu-list {
  flex: 1;
  margin: 24rpx 20rpx;
  background: linear-gradient(145deg, #ffffff, #fafafa);
  border-radius: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.06);
  overflow: hidden;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 0 32rpx;
  height: 100rpx;
  border-bottom: 1rpx solid rgba(0,0,0,0.04);
  transition: background 0.3s ease;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item:active {
  background: rgba(76, 175, 80, 0.05);
}

.menu-icon {
  font-size: 36rpx;
  margin-right: 24rpx;
}

.menu-text {
  flex: 1;
  font-size: 30rpx;
  color: #333;
  font-weight: 400;
}

.menu-arrow {
  font-size: 36rpx;
  color: #BDBDBD;
  font-weight: 300;
}

.logout-btn {
  width: 90%;
  height: 96rpx;
  font-size: 30rpx;
  font-weight: 600;
  color: #E53935;
  background-color: #fff;
  border: 3rpx solid #E53935;
  border-radius: 48rpx;
  margin: 30rpx auto 50rpx;
  line-height: 96rpx;
  box-shadow: 0 4rpx 16rpx rgba(229, 57, 53, 0.15);
  letter-spacing: 1rpx;
}

.logout-btn:active {
  background: rgba(229, 57, 53, 0.05);
}

.avatar-preview-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.85);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.preview-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx;
}

.preview-avatar {
  width: 550rpx;
  height: 550rpx;
  border-radius: 24rpx;
  margin-bottom: 50rpx;
  box-shadow: 0 20rpx 60rpx rgba(0,0,0,0.4);
}

.preview-actions {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  width: 100%;
}

.preview-btn {
  width: 320rpx;
  height: 88rpx;
  font-size: 30rpx;
  font-weight: 600;
  color: #fff;
  background: linear-gradient(135deg, #4CAF50 0%, #2E7D32 100%);
  border-radius: 44rpx;
  line-height: 88rpx;
  box-shadow: 0 6rpx 20rpx rgba(76, 175, 80, 0.3);
}

.preview-btn:active {
  transform: translateY(2rpx);
}

.preview-btn-cancel {
  background: linear-gradient(135deg, #757575 0%, #616161 100%);
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.2);
}
