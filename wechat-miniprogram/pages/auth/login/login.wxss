.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background: linear-gradient(180deg, #e8f5e9 0%, #f5f5f5 100%);
  padding: 0;
  position: relative;
}

.container::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 350rpx;
  background: linear-gradient(135deg, #4CAF50 0%, #2E7D32 50%, #1B5E20 100%);
  border-bottom-left-radius: 80rpx;
  border-bottom-right-radius: 80rpx;
  z-index: 0;
}

.header {
  position: relative;
  z-index: 1;
  margin-bottom: 60rpx;
  text-align: center;
  padding-top: 100rpx;
}

.title {
  font-size: 48rpx;
  font-weight: 700;
  color: #fff;
  margin-bottom: 16rpx;
  letter-spacing: 4rpx;
  text-shadow: 0 4rpx 8rpx rgba(0,0,0,0.2);
}

.subtitle {
  font-size: 26rpx;
  color: rgba(255,255,255,0.85);
  font-weight: 400;
}

.form {
  position: relative;
  z-index: 1;
  flex: 1;
  padding: 0 40rpx;
}

.form-item {
  margin-bottom: 28rpx;
  background: linear-gradient(145deg, #ffffff, #fafafa);
  border-radius: 20rpx;
  padding: 0 28rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.06),
              0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  transition: all 0.3s ease;
}

.form-item:focus-within {
  box-shadow: 0 12rpx 40rpx rgba(76, 175, 80, 0.15),
              0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  transform: translateY(-2rpx);
}

.label {
  display: block;
  font-size: 24rpx;
  color: #2E7D32;
  margin-bottom: 8rpx;
  padding-top: 24rpx;
  font-weight: 500;
}

.input-wrapper {
  position: relative;
  display: flex;
  align-items: center;
}

.input {
  flex: 1;
  font-size: 30rpx;
  color: #333;
  padding: 20rpx 0;
  border: none;
  outline: none;
  font-weight: 400;
}

.toggle-password {
  font-size: 24rpx;
  color: #4CAF50;
  padding-left: 20rpx;
  font-weight: 500;
  transition: color 0.3s ease;
}

.toggle-password:active {
  color: #2E7D32;
}

.placeholder {
  color: #BDBDBD;
}

.login-btn {
  width: 100%;
  height: 96rpx;
  font-size: 32rpx;
  font-weight: 600;
  color: #fff;
  background: linear-gradient(135deg, #4CAF50 0%, #2E7D32 100%);
  border-radius: 48rpx;
  margin-top: 50rpx;
  margin-bottom: 36rpx;
  line-height: 96rpx;
  box-shadow: 0 8rpx 24rpx rgba(76, 175, 80, 0.35);
  transition: all 0.3s ease;
  letter-spacing: 2rpx;
}

.login-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 12rpx rgba(76, 175, 80, 0.3);
}

.login-btn[disabled] {
  background: linear-gradient(135deg, #BDBDBD 0%, #9E9E9E 100%);
  box-shadow: none;
}

.register-link {
  text-align: center;
  font-size: 26rpx;
  color: #757575;
  padding-bottom: 60rpx;
}

.link {
  color: #4CAF50;
  margin-left: 8rpx;
  font-weight: 500;
}
