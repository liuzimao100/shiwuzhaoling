.container {
  padding: 0;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  background: linear-gradient(180deg, #f5f5f5 0%, #fafafa 100%);
}

.header {
  background: linear-gradient(135deg, #03A9F4 0%, #0288D1 50%, #01579B 100%);
  padding: 80rpx 40rpx 50rpx;
  text-align: center;
  border-bottom-left-radius: 40rpx;
  border-bottom-right-radius: 40rpx;
}

.title {
  font-size: 44rpx;
  font-weight: 700;
  color: #fff;
  margin-bottom: 12rpx;
  letter-spacing: 2rpx;
}

.subtitle {
  font-size: 26rpx;
  color: rgba(255,255,255,0.85);
}

.empty-container {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 40rpx;
}

.empty-icon-wrapper {
  width: 180rpx;
  height: 180rpx;
  background: linear-gradient(145deg, #e1f5fe, #b3e5fc);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 40rpx;
  box-shadow: 0 16rpx 48rpx rgba(3, 169, 244, 0.2);
}

.empty-icon {
  font-size: 80rpx;
}

.empty-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 16rpx;
}

.empty-desc {
  font-size: 26rpx;
  color: #999;
  text-align: center;
  line-height: 1.6;
}

.list-container {
  flex: 1;
  padding: 24rpx;
  padding-bottom: 40rpx;
}

.items-grid {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.item-card {
  background: #fff;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.item-image-wrapper {
  width: 100%;
  height: 260rpx;
  background: #f5f5f5;
  overflow: hidden;
}

.item-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.item-info {
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.item-id {
  font-size: 26rpx;
  font-weight: 600;
  color: #333;
}

.item-time,
.item-phone {
  font-size: 22rpx;
  color: #777;
}
