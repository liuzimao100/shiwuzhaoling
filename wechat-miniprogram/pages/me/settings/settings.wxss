.container {
  padding: 24rpx;
}

.card {
  background-color: #fff;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  padding: 16rpx 0;
}

.section-title {
  font-size: 26rpx;
  color: #9e9e9e;
  padding: 8rpx 32rpx;
}

.setting-item {
  display: flex;
  align-items: center;
  padding: 24rpx 32rpx;
  border-top: 1rpx solid #f0f0f0;
}

.setting-text {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.setting-title {
  font-size: 30rpx;
  color: #333;
}

.setting-desc {
  font-size: 24rpx;
  color: #9e9e9e;
}

.setting-arrow {
  font-size: 34rpx;
  color: #bdbdbd;
}

.tips {
  margin-top: 32rpx;
  padding: 24rpx 28rpx;
  border-radius: 16rpx;
  background-color: #fff3cd;
  color: #856404;
}

.tips-title {
  display: block;
  font-size: 26rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.tips-text {
  font-size: 24rpx;
  line-height: 1.6;
}
